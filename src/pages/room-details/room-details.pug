link(rel="stylesheet" href="./room-details.css")
link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0")
link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")

.pages
  .pages__header
    +createHeaderSection(false)
  .pages__main
    .room-details
      .room-details__image-section
        +createImageSection([{"src": "../../assets/images/room-1-container.jpg", "alt": "Фото 1"}, {"src": "../../assets/images/room-2-container.jpg", "alt": "Фото 2"}, {"src": "../../assets/images/room-3-container.jpg", "alt": "Фото 3"}])
      .room-details__content
        .room-details__room-description
          .room-details__room-info
            p.room-details__room-info-title Сведения о номере
            +createDescription([{"icon": "insert_emoticon", "title": "Комфорт", "subtitle": "Шумопоглощающие стены"}, {"icon": "location_city", "title": "Удобство", "subtitle": "Окно в каждой из спален"}, {"icon": "whatshot", "title": "Уют", "subtitle": "Номер оснащён камином"}])
          //- +createPieChart
        .room-details__feedbacks    
          -let firstComment = "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
          -let firstProfile = {"src": "../../assets/images/profile.jpg", "alt": "Фото 1", "author": "Мурад Сарафанов", "days": "5", "likes": "12", "liked": 'favorite', "comment": firstComment}
          -let secondComment = "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"
          -let secondProfile = {"src": "../../assets/images/profile-2.jpg", "alt": "Фото 2", "author": "Патрисия Стёклышева", "days": "7", "likes": "2", "liked": 'favorite_border', "comment": secondComment}
          +createFeedbacksSection([firstProfile, secondProfile], true)
        .room-details__rules 
          .room-details__bullet-list
            .room-details__bullet-list-title Правила
            +createBulletList(['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
          .room-details__cancellation-details
            .room-details__cancellation-details-title Отмена
            p.room-details__cancellation-details-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
        .room-details__booking-card
          +createBookingFormCard("888", "9 990", true)
  .pages__footer 
    +createFooterContent(false)

script(type="module" src="../../components/__chart/__chart.js")
script(type="module" src="../../components/__dropdown/__dropdown.js")
script(type="module" src="../../components/__datepicker/__datepicker.js")